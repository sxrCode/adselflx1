<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Options">
        <attr name="titleText" format="string"></attr>
        <attr name="valueColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="itemOptions">
        <attr name="labelText" format="string"></attr>
        <attr name="labelFontSize" format="dimension"></attr>
        <attr name="labelFontColor" format="color"></attr>

        <attr name="valueText" format="string"></attr>
        <attr name="valueFontSize" format="dimension"></attr>
        <attr name="valueFontColor" format="color"></attr>

        <attr name="unitText" format="string"></attr>
        <attr name="unitFontSize" format="dimension"></attr>
        <attr name="unitFontColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="CustomLayoutLP">
        <attr name="android:layout_gravity" />
        <attr name="layout_position">
            <enum name="middle" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>
</resources>